{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"next/core-web-vitals",
		"plugin:tailwindcss/recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:storybook/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"plugins": [
		"tailwindcss",
		"@typescript-eslint",
		"eslint-plugin-tsdoc",
		"jsx-a11y"
	],
	"settings": {
		"tailwindcss": {
			"calees": [
				"cn",
				"clsx",
				"twMerge"
			]
		}
	},
	"rules": {
		"@typescript-eslint/no-unused-vars": [
			"error"
		],
		"@typescript-eslint/no-non-null-assertion": "off",
		"arrow-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"eol-last": [
			"error",
			"always"
		],
		"eqeqeq": "error",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"max-depth": "error",
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 2,
				"maxEOF": 1
			}
		],
		"no-process-env": [
			"error"
		],
		"no-tabs": "off",
		"no-var": "error",
		"no-unused-vars": "off",
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"tailwindcss/no-custom-classname": "off",
		"tsdoc/syntax": "warn",
		"@typescript-eslint/ban-ts-comment": ["error",{"allow-with-description":  true}]
	}
}
